                                        Cursor="Hand" Click="SeeServiceLogButton_Click">
                            Open Service Log
                        </Button>

                        <Button Name="SeeApplicationLogButton"
                                       Background="LightGray"
                                       Grid.Column="5" Grid.Row="11"
                                       Grid.ColumnSpan="4" Grid.RowSpan="2"
                                       VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                        Width="140" Height="30"
                                        Cursor="Hand" Margin="10,0,10,5" Click="SeeApplicationLogButton_Click">
                            Open Application Log
                        </Button>

                        <Rectangle Fill="Transparent" 
                                       Grid.Column="0" Grid.Row="14" 
                                       Grid.ColumnSpan="20" Grid.RowSpan="5" 
                                       Margin="5 20 5 5"
                                       Stroke="Gray"
                                       StrokeThickness="0.5"
                            />
                        <TextBlock Background="White"
                                       Grid.Column="0" Grid.Row="14"
                                       Grid.ColumnSpan="2" Grid.RowSpan="2"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
